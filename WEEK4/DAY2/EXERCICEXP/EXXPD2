#exercice4
pizza = []
e = 1
while e ==1:
    a = input("Enter another element")
    pizza.append(a)
    print(pizza)
    r = input("do you want to add another thing ? (yes or no)")
    if r=="yes":
        e=1
    else :
        e=0
        input("it's finish")

#exercice5
age = int(input("Enter your age, please"))
if age < 3:
    print("Its free for chlidren")
elif 3 < age < 12:
    print("You have to paye 10$, please")
else:
    print("You have to paye 15$")

